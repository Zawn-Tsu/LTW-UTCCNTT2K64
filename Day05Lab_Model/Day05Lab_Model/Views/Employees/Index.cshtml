@model IEnumerable<Day05Lab_Model.Models.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">📋 Danh sách nhân viên</h2>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>SĐT</th>
                <th>Email</th>
                <th>Lương (VNĐ)</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td class="text-center">@emp.Id</td>
                    <td>@emp.FullName</td>
                    <td class="text-center">@emp.Gender</td>
                    <td>@emp.Phone</td>
                    <td>@emp.Email</td>
                    <td class="text-end">@emp.Salary.ToString("N0")</td>
                    <td>
                        @if (emp.Status == "Active")
                        {
                            <span class="badge bg-success">Đang làm</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Nghỉ việc</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
