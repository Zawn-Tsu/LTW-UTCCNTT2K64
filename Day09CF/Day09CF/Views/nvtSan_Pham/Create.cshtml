@model Day09CF.Models.nvtSan_Pham

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4>🛍️ Thêm sản phẩm mới</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="nvtMaSanPham" class="form-label"></label>
                        <input asp-for="nvtMaSanPham" class="form-control" placeholder="Nhập mã sản phẩm" />
                        <span asp-validation-for="nvtMaSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="nvtTenSanPham" class="form-label"></label>
                        <input asp-for="nvtTenSanPham" class="form-control" placeholder="Tên sản phẩm" />
                        <span asp-validation-for="nvtTenSanPham" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <label asp-for="nvtHinhAnh" class="form-label"></label>
                        <input asp-for="nvtHinhAnh" class="form-control" placeholder="Đường dẫn hình ảnh" />
                    </div>

                    <div class="col-md-3">
                        <label asp-for="nvtSoLuong" class="form-label"></label>
                        <input asp-for="nvtSoLuong" type="number" class="form-control" min="0" />
                    </div>

                    <div class="col-md-3">
                        <label asp-for="nvtDonGia" class="form-label"></label>
                        <input asp-for="nvtDonGia" type="number" class="form-control" step="0.01" min="0" />
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="nvtLoaiSanPhamId" class="form-label"></label>
                    <select asp-for="nvtLoaiSanPhamId" class="form-select" asp-items="ViewBag.nvtLoaiSanPhamId">
                        <option value="">-- Chọn loại sản phẩm --</option>
                    </select>
                </div>

                <div class="text-end mt-4">
                    <input type="submit" value="💾 Lưu" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
