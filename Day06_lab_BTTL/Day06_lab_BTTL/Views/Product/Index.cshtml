@model IEnumerable<Day06_lab_BTTL.Models.Product>

<h2>Danh sách sản phẩm</h2>
<p><a asp-action="Create">Thêm sản phẩm</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên</th>
            <th>Giá chuẩn</th>
            <th>Giá KM</th>
            <th>Danh mục</th>
            <th>Mô tả</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.SalePrice</td>
                <td>@item.CategoryId</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>